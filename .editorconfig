# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[.gitignore]
insert_final_newline = unset

[*.py]
indent_size = 4

[workflows/comfy*/*.json]
insert_final_newline = unset

[Dockerfile*]
indent_size = 4

[*.{md,txt,mkdn}]
indent_size = 4
indent_size = unset
trim_trailing_whitespace = false
